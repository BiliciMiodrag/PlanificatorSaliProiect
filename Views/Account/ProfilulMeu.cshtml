@model PlanificatorSali.Models.ApplicationUser
@{
    ViewData["Title"] = "Profilul Meu";
}



<head>
    <title>Profilul Meu</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

<script>
    $('table .edit').on('click', function () {
        var id = $(this).parent().find('.id').val();
        $.ajax({
            type: 'GET',
            url: '/account/find/' + id,
            success: function (user) {
                $('#editEmployeeModal #id').val(user.id);
                $('#editEmployeeModal #nume').val(user.nume);
                $('#editEmployeeModal #prenume').val(user.prenume);
                $('#editEmployeeModal #email').val(user.email);
                $('#editEmployeeModal #email').val(user.phonenumber);
            }
        })
    });
</script>


</head>


<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>@Html.DisplayFor(model => model.Email)</h1></div>
        <div class="col-sm-2"><img title="profile image" class="img-circle img-responsive" src="https://img.icons8.com/bubbles/100/000000/admin-settings-male.png"></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="text-center">
                <img src="https://www.kindpng.com/picc/m/22-223910_circle-user-png-icon-transparent-png.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
 </hr>
        <br>
        </div><!--/col-3-->
        <div class="col-sm-9">



            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" asp-controller="Account" asp-action="ProfilulMeu" method="post" id="registrationForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name"><h4>Nume</h4></label>
                                <input type="text" class="form-control" name="nume" id="nume" value="@Html.DisplayFor(model =>model.Nume)" title="Introduceți-vă numele">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Prenume</h4></label>
                                <input type="text" class="form-control" name="prenume" id="prenume" value="@Html.DisplayFor(model =>model.Prenume)" title="Introduceți-vă prenumele">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone"><h4>Telefon</h4></label>
                                <input type="text" class="form-control" name="phonenumber" id="phonenumber" value="@Html.DisplayFor(model =>model.PhoneNumber)" title="Introduceți-vă numărul de telefon">
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Email</h4></label>
                                <input type="email" class="form-control" name="email" id="email" value="@Html.DisplayFor(model =>model.Email)" title="Introduceți-vă email-ul">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Salvează</button>
                            </div>
                        </div>
                    </form>



                </div><!--/col-9-->
            </div><!--/row-->
        </div>
    </div>
</div>