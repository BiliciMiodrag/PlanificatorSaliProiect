@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav ml-auto my-2 my-lg-0">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Index"
                   title="Welcome">Bine ați venit @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-link btn btn-link text-info">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" asp-controller="Account"
                   asp-action="Login">Autentificare</a>
            </li>
           
        }
    </ul>